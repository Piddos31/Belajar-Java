package com.belajar;
import java.util.*;
public class Main {
    public static void main(String[] args){
        Scanner userInput = new Scanner(System.in);
        // if-else-if
        int a,b;
        System.out.println("Mulai");
        System.out.print("Masukan nilai A : ");
        a = userInput.nextInt();
        System.out.print("Tebaklah Nilai A : ");
        b = userInput.nextInt();
        if (a == b){
            System.out.println("Selamat Anda Benar");
        }else
            System.out.println("Maaf Anda belum benar");
            System.out.print("Masukkan ulang nilai Tebakan : ");
            b = userInput.nextInt();
        if (a == b){
            System.out.println("Selamat Anda Benar");
        }else{
            System.out.println("Game Over");
        }
        System.out.println("akhir program");
    }
}
